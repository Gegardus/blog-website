<h1>User's info</h1>

<section>
  <div class="card flex">
    <div class="user-image border">
      <img src=<%= @user.photo %> alt="" width="100%" heigth="100%">
    </div>
    <div class="user-data border">
      <h2><%= @user.name %></h2>
      <p class="posts-number">Number of posts: <%= @user.posts_counter %></p>
    </div>
  </div>
  <div class="card left">
    <h4>Biography:</h4><br>
    <p><%= @user.bio %></p>
  </div>
</section>
<section>
  <h3 class="users-title">List of recent Posts</h3>
  <ul>
    <% @user.last_posts.each do |post| %>
      <%= link_to user_post_path(user_id: post.author_id, id: post.id) do %>
        <li class="card left">
          <p> Post # <%= post.id %> </p>
          <h4><%= post.title%></h4>
          <p><%= post.text%></p>
          <div class="right">
            <span>Comments: <%= post.comments_counter %></span>
            <span>Likes: <%= post.likes_counter %> </span>
          </div>
        </li>
      <% end %>
    <% end %>
  </ul>
  <%= link_to "See all posts", user_posts_path(user_id: @user.id), class: "btn" %>
</section>


