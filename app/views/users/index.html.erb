<h1 class="users-title">List of all Users </br> contains <%= @users.length %> persons </h1>
  <ul> 
    <% @users.each do |user|%>   
      <%= link_to user do %>
       <li class="card flex">
      <div class="user-image border">
        <img src=<%= user.photo %> alt="image" width="100%" heigth="100%">
      </div>
      <div class="user-data border">
        <h2><%= user.name %></h2>
        <p class="posts-number">Number of posts: <%= user.posts_counter %></p>
      </div>
       </li>    
      <% end %>
    <% end %>
</ul>


  
 
